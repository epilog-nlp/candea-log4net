<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<configSections>
		<section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,Log4net" />
	</configSections>
	
	<log4net>
		<appender name="CustomFileLogger" type="log4net.Appender.RollingFileAppender">
			<file type="log4net.Util.PatternString" value="log/DefaultLoggingService.log" />

      <!-- ROLL BY SIZE -->
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="100" />
      <maximumFileSize value="50MB" />
      <staticLogFileName value="true" />
    
			<param name="Encoding" value="unicodeFFFE" />
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%d %2t %-5p [%c] %m%n" />
			</layout>
			<filter type="log4net.Filter.LevelRangeFilter">
				<param name="LevelMin" value="DEBUG" />
				<param name="LevelMax" value="FATAL" />
			</filter>
		</appender>

		<root>
			<level value="DEBUG" />
			<appender-ref ref="CustomFileLogger" />
		</root>
	</log4net>
</configuration>